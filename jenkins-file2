pipeline{
    agent any
    environment{
      M2_HOME=/opt/apache-maven-3.6.3/
      PATH=$PATH:$M2_HOME/bin/
                }
    stages{
      stage("Git Checkout"){
           steps{
           // Get some code from a GitHub repository
            git 'https://github.com/yugandhar558/maven_test3.git'
                }
                           }  
       stage("Maven_Build"){
           steps{
               //Build sample web apps using maven 
               sh "mvn clean package"
                 }     
                           }          
            }
          }
